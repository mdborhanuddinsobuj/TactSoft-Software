@model IEnumerable<TactSoft.Core.Model.CareerModel>

@{
    ViewData["Title"] = "DataShow";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">DataShow</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <table class="table table-bordered border-primary table-sm text-nowarp" id="example1">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.University)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalExperience)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpertiseArea)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentCompany)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentSalary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpectedSalary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CoverLetter)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Resume)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoticePeriod)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.University)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalExperience)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpertiseArea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentCompany)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentSalary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpectedSalary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CoverLetter)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Resume)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoticePeriod.NoticeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.CategoryName)
                            </td>
                            <td>
                                <a asp-action="DownloadFile"
               asp-route-filename="@Url.Content(item.Resume)">
               Download File
            </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-green"><i class="fa-regular fa-eye"></i></a>
                                <a asp-action="Detele" asp-route-id="@item.Id" class="text-red"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": true, "autoWidth": true,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
    </script>
}