    <section class="content">
        <div class="container-fluid">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NoticeName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NoticeName)
